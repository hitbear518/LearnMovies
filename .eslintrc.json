{
    "extends": "airbnb",
    "plugins": [
        "react",
        "react-native"
    ],
    "ecmaFeatures": {
      "jsx": true
    },
    "parser": "babel-eslint",   
    "rules": {
        "react-native/no-unused-styles": 2,
        "react-native/split-platform-components": 2,
        "react-native/no-inline-styles": 2,
        
        "no-use-before-define": 0,
        
        "react/prefer-stateless-function": 1
    }
}